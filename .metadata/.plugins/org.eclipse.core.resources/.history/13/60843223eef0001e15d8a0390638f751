package section05;

public class EX05_02 {
	public static void main(String[] args) {
		
		//로직 구성
		//정수형 int 합을 저장할 변수 초기값
		//반복문 for 구문을 이용해 1부터 100까지 반복
		//반복문 for 구문 안에 조건문 if를 이용 (2로 나누었을때 나머지는 0이 나오도록 짝수값)
		//짝수의 합
		// for 구문 바깥에 출력
		
		int sum = 0; 	
		
		for (int i = 1; i<=100; i++) {
			if (i % 2 == 0) {
				sum += i;
			}
		}
		System.out.println("합 : " + sum);
	}
}
