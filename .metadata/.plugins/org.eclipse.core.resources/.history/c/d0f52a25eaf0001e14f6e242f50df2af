package section05;

public class EX_05_04 {
	public static void main(String[] args) {
		//로직 구성
		
		for (int i = 0; i < 7; i++) {
			for (int j = 0; j <7 - i; j++) {
				System.out.print();
			}
			
			for (int k = 0; k < (2*i) + 1; k++) {
				System.out.print("*");
			}
			
			System.out.println();
			
		}
		
		
		
		
		
		
	}
}
