package constructor;

public class BookMain {
	public static void main(String[] args) {
		//객체 
		Book b1 = new Book(); //기본생성자를 만들어놓았으니 가능하다!
		
		b1.title = "자바의 신";
		b1.author = "자바 ";
		b1.printBook();
		
		Book b2 = new Book("자바프로그래밍", "개발자", 0, 2024);
		b2.printBook();
		
		
	}
	
	//객체마다의 가격의 총합을 구하는 메소드
	
	int totalPrice(int[] prices) {
		//총합 저장할 변수선언
		//반복문(for each문) {
		//총합 변수 += for each문 변수
		//}
		//return 총합변수
		
		int total = 0;
		for(int price: prices) {
			total += prices;
		}
		
		
		
		
	}
	
	
	
	
}
