package review;

public class Tv {
	//필드
	int ch;
	int vol;
	boolean power;
	String color;
	
	//메소드
	void powerOnOff() {
		System.out.println("Tv 전원을 껴고 큽니다.");
	}
	
	void chUp() {
		System.out.println("현재 채널 :" + ch);
		System.out.println("Tv 채널을 1 올립니다." + ++ch);
	}
	
	void chDown() {
		System.out.println("현재 채널 : " + ch);
		System.out.println("Tv 채널을 1 내립니다." + --ch);
	}
	
}
