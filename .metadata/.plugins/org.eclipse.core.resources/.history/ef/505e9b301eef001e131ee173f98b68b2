package tvTask;

public class BasicTv {
	//필드
	String color;
	int inch;
	int price;
	boolean power; //true : on, false : off
	int channel = 1;
	
	
	//매개변수 3개 받는 생성자(색상, 인치, 가격)
	public BasicTv(String color, int inch, int price) {
		this.color = color;
		this.inch = inch;
		this.price = price;
	}


	
	//매개변수 4개 받는 생성자(색상, 인치, 가격, 채널)
	public BasicTv(String color, int inch, int price, int channel) {
		this.color = color;
		this.inch = inch;
		this.price = price;
		this.channel = channel;
	}
	
	//메소드
	
	void powerOnOff() {
//		power = !power; //boolean의 기본값은 false이기 때문에 !power코드를 사용해, true값으로 맞춰줘야한다
		if (!this.power) {
			System.out.println("Tv 전원이 켜졌습니다.");
		} else {
			System.out.println("Tv 전원을 꺼졌습니다.");
		}
	}
	
 	//전원 켜는 메소드 powerOnOff() 매개변수 x, 리턴값 x
	
	//채널 올리는 메소드 channelUp() 매개변수 x, 리턴값 o
	int channelUp() {
		return ++channel;
	}
	
	//채널 내리는 메소드 channelDown() 매개변수 x, 리턴값 o
	
	int channelDown() {
		return --channel;
	}
	
	
	
	
	
	
}
